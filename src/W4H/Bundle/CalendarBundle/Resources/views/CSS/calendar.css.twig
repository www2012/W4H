<style type="text/css">

  /* Column */
  #main #calendar .column.room { width: {{ columnWidth }}px; }
  #main #calendar .scrollzone .columns { width: {{ columns*columnWidth + columnWidth + 380 }}px; }

  /* Task */
  .task { width: {{ columnWidth-12 }}px; }

  /* Unit */
  #main #calendar .column > ul > li.unit { height: {{ rowHeight }}px; }

  {% for i in 1..rows %}
    #main #calendar .column > ul > li > .unitx{{ i }} { height: {{ i*(rowHeight+1) - 12 }}px; }
  {% endfor %}

  {% for slug, bg in events %}
    body .task.{{ slug }},
    body .{{ slug }} > .symbol
    {
        border-radius: 8px !important;
        border: 2px solid {{ bg }} !important; 
    }
  {% endfor %}

  {% for slug, bg in activity_types %}
    .task.{{ slug }},
    .{{ slug }} > .symbol
    {
        background: {{ bg }} !important;
    }
  {% endfor %}

</style>
