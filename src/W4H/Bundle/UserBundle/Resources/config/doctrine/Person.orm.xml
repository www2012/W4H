<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="W4H\Bundle\UserBundle\Entity\Person" table="fos_user_user">

        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="first_name" column="first_name" type="string" length="64" />
        <field name="last_name" column="last_name" type="string" length="64" />
        <field name="organisation" column="organisation" type="string" length="128" />
        <field name="service" column="service" type="string" length="128" />
        <field name="other_mail" column="other_mail" type="string" length="128" />
        <field name="mobile_phone" column="mobile_phone" type="string" length="16" />
        <field name="website_url" column="website_url" type="string" length="255" />
        <field name="freeset" column="freeset" type="string" length="64" />
        <field name="socials_account" column="socials_account" type="string" length="255" />
        <field name="country_iso_code" column="country_iso_code" type="string" length="4" />

    </entity>

</doctrine-mapping>
